<div class="modal fade" id=<%= "edit_form#{fund.id}" %> tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t ".edit_fund" %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: fund do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, t(".name") %>
            <%= f.text_field :name, class: "form-control", placeholder: t(".enter_name") %>
          </div>
          <div class="form-group">
            <%= f.label :founder, t(".founder") %>
            <%= f.select "founder_id", fund.user_funds.collect {|p| [ p.user.name, p.id ]}, {}, class: "js-example-basic-single", style: "width:100%" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.button t(".save"), class: "btn btn-success" %>
          <button type="button" class="btn btn-light" data-dismiss="modal"><%= t ".form_cancel" %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
